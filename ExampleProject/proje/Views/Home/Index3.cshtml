
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index3</title>
    <style>
        * {
            margin: 0 ;
            padding : 0;
            box-sizing:border-box;
        }
        body{
            background:pink;
            min-height:200vh;
        }
        header{
            position:fixed;
            top:0 ;
            left: 0 ;
            width:100%;
            display:flex;
            justify-content:space-between;
            align-items:center;
            transition: 0.6s;
            padding:40px 100px;
            z-index:100000;
        }

        header .logo{
            position:relative;
            font-weight:700;
            color:#fff;
            text-decoration:none;
            font-size:2em;
            letter-spacing:2px;
            transition:0.6s;
        }

        header ul{
            position:relative;
            display:flex;
            justify-content:center;
            align-items:center;
        }

        header ul li{
            position:relative;
            list-style:none;
           
        }

        header ul li a{
            position:relative;
            margin: 0px 35px;
            text-decoration: none;
            color: #fff;
            font-size:25px;
            letter-spacing:2px;
            font-weight:500;
            transition: 0.6s;
        }

                        header ul li a:hover{
                            color:#a4c639;
                            transition:0.5s;
                        }


        .banner{
            position:relative;
          /*  width:100%;
            height:100vh;*/
/*			background: url('/web/img/slide_01.jpg');
*/            background-size:cover;
        }

        
        header.sticky{
            padding:5px 100px;
            background:#fff;
            height:10%;
        }

            header.sticky .logo{
                color :#a4c639;
            }
        header.sticky ul li a{

            color:#000;
        }
        
    </style>
</head>
<body>

    <header>



        <a href="#" class="logo">FINANCIAL BUSINESS</a>

        
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Our Services</a></li>
                <li><a href="#">Contact Us</a></li>
                <li><a href="#">One Page</a></li>
            </ul>
    </header>
    <section class="banner"></section>

</body>
</html>

        <script type="text/javascript">
        window.addEventListener("scroll",function(){
            var header=document.querySelector("header")
            header.classList.toggle("sticky",window.scrollY>0);
        })
        </script>